from web3 import Web3
from eth_account import Account
from colorama import init, Fore

# Inisialisasi colorama
init(autoreset=True)

# Inisialisasi koneksi ke RPC
rpc_url = 'https://rpc-testnet.unit0.dev'
chain_id = 88817
w3 = Web3(Web3.HTTPProvider(rpc_url))

# Pastikan koneksi berhasil
if not w3.is_connected():
    print(Fore.RED + "Koneksi ke RPC gagal")
    exit()

# Fungsi untuk membaca private key dari file
def read_private_key(filename='private_key.txt'):
    try:
        with open(filename, 'r') as file:
            private_key = file.read().strip()
        return private_key
    except FileNotFoundError:
        print(Fore.RED + f"File {filename} tidak ditemukan.")
        exit()

# Fungsi untuk mengirim token
def send_tokens(sender_private_key, to_address, amount, gas_price_gwei, gas_limit):
    sender_address = Account.from_key(sender_private_key).address
    amount_wei = w3.toWei(amount, 'ether')
    gas_price = w3.toWei(gas_price_gwei, 'gwei')

    # Periksa saldo akun pengirim
    balance = w3.eth.getBalance(sender_address)
    total_cost = amount_wei + (gas_price * gas_limit)
    if balance < total_cost:
        raise ValueError(f'Saldo tidak mencukupi: saldo {balance}, biaya total {total_cost}')

    # Ambil nonce yang belum digunakan
    nonce = w3.eth.getTransactionCount(sender_address, 'pending')

    tx = {
        'nonce': nonce,
        'to': to_address,
        'value': amount_wei,
        'gas': gas_limit,
        'gasPrice': gas_price,
        'chainId': chain_id,
    }

    # Sign transaksi dan kirim
    signed_tx = w3.eth.account.signTransaction(tx, sender_private_key)
    tx_hash = w3.eth.sendRawTransaction(signed_tx.rawTransaction)
    return tx_hash.hex()

# Main program
def main():
    print(Fore.MAGENTA + "===============================")
    print(Fore.CYAN + "Units Auto Send")
    print(Fore.MAGENTA + "===============================")
    print(Fore.CYAN + "Channel : t.me/UGDAirdrop")
    print(Fore.MAGENTA + "===============================\n")

    sender_private_key = read_private_key('private_key.txt')
    sender_address = Account.from_key(sender_private_key).address

    # Menampilkan saldo pengirim dalam UNIT0
    balance_wei = w3.eth.getBalance(sender_address)
    balance_unit0 = w3.fromWei(balance_wei, 'ether')
    print(Fore.CYAN + f"Alamat: {sender_address}")
    print(Fore.CYAN + f"Saldo: {balance_unit0} UNIT0\n")

    input_address = input(Fore.YELLOW + "Masukkan alamat tujuan: ").strip()
    gas_price_gwei = float(input(Fore.YELLOW + "Masukkan gas price (gwei): ").strip())
    gas_limit = int(input(Fore.YELLOW + "Masukkan gas limit: ").strip())
    transaction_count = int(input(Fore.YELLOW + "Masukkan jumlah transaksi yang ingin dikirim: ").strip())
    amount = float(input(Fore.YELLOW + "Masukkan jumlah token yang akan dikirim: ").replace(',', '.'))

    total_transactions = 0

    for _ in range(transaction_count):
        try:
            tx_hash = send_tokens(sender_private_key, input_address, amount, gas_price_gwei, gas_limit)
            print(Fore.GREEN + f'Transaksi berhasil dikirim ke {input_address} dengan hash: {tx_hash}')
            total_transactions += 1
        except ValueError as e:
            print(Fore.RED + f'Error: {e}')
            break
        except Exception as e:
            print(Fore.RED + f'Transaksi gagal: {e}')
            break

    print(Fore.MAGENTA + "\n===============================")
    print(Fore.YELLOW + "Pengiriman selesai!")
    print(Fore.CYAN + f"Total transaksi berhasil: {total_transactions}")
    print(Fore.CYAN + "Terima kasih telah menggunakan script ini.")
    print(Fore.CYAN + "Channel : t.me/UGDAirdrop")
    print(Fore.MAGENTA + "===============================")

if __name__ == '__main__':
    main()
